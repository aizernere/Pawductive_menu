<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/orange_gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/screen_horizontal_padding"
            android:paddingVertical="@dimen/screen_vertical_padding"
            tools:ignore="DuplicateIds">
            <LinearLayout
                android:id="@+id/paw_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:paddingBottom="0dp">
                <TextView
                    android:id="@+id/menuHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_extrabold"
                    android:shadowColor="#0A0D2B"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="2"
                    android:text="menuButton"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp" />

                <LinearLayout
                    android:id="@+id/circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_blue_circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon_user_filled" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/settigsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/screen_horizontal_padding"
            android:paddingVertical="@dimen/screen_vertical_padding"
            tools:ignore="DuplicateIds">
            <LinearLayout
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:orientation="horizontal"
                android:paddingRight="@dimen/border_width"
                android:paddingBottom="@dimen/border_width"
                tools:ignore="DuplicateIds">



                <TextView
                    android:id="@+id/labelBG"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/icon_label_settings"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:textSize="22sp"
                    android:text="Home Setting"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:textColor="@color/blue_dark" />
                <Button
                    android:id="@+id/btnBGM"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/icon_rural"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:orientation="horizontal"
                android:paddingRight="@dimen/border_width"
                android:paddingBottom="@dimen/border_width"
                tools:ignore="DuplicateIds">



                <TextView
                    android:id="@+id/labelBG"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/icon_label_settings"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:textSize="22sp"
                    android:text="Background Music"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:textColor="@color/blue_dark" />
                <Button
                    android:id="@+id/btnBGM"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/sound_on"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:orientation="horizontal"
                android:paddingRight="@dimen/border_width"
                android:paddingBottom="@dimen/border_width"
                tools:ignore="DuplicateIds">

                <TextView
                    android:id="@+id/labelSound"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/icon_label_settings"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:textSize="22sp"
                    android:text="Sound Effects"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:textColor="@color/blue_dark" />
                <Button
                    android:id="@+id/btnSound"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/sound_on"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:orientation="horizontal"
                android:paddingRight="@dimen/border_width"
                android:paddingBottom="@dimen/border_width"
                tools:ignore="DuplicateIds">

                <TextView
                    android:id="@+id/labelNotif"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/icon_label_settings"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:textSize="22sp"
                    android:text="Notifications"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:textColor="@color/blue_dark" />
                <Button
                    android:id="@+id/btnNotif"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/notification_off"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>